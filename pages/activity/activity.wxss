.activity-container {
  -webkit-display: flex;
  display: flex;
  flex-direction: column;
  padding-top: 15px;
  padding-bottom: 15px;
}

.activity-info {
  padding-left: 15px;
  padding-right: 15px;
}

.icon-item {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.icon-item-text {
  font-size: 17px;
  font-weight: 400;
  -webkit-flex: 1;
  flex: 1;
}
.icon-item-img {
  width: 64rpx;
  height: 64rpx;
  background-color: inherit;
  margin-left: 10px;
}

.activity-name {
  font-weight: 400;
  font-size: 17px;
  margin-bottom: 10px;
}

.activity-desc {
  font-size: 13px;
  line-height: 1.2;
}

.activity-date {
  margin-top: 10px;
  font-size: 14px;
  line-height: 1em;
}

.activity-map {
  width: 100%;
  margin-top: 15px;
}

.activity-trees {
  margin-bottom: 15px;
  padding-left: 15px;
  padding-right: 15px;
  font-size: 14px;
  line-height: 1.2em;
}
.activity-tree-img {
  border-radius: 50%;
}
.img-mask {
  background-color: #0BB20C;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity:0.1;
  filter:alpha(opacity=10);
}
.img-mask-icon {
  position: absolute;
  bottom: 0px;
  left: 62rpx;
}
