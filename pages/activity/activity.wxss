@import "../comments/comments.wxss";

.container {
  padding-bottom: 40px;
}

.activity-container {
  -webkit-display: flex;
  display: flex;
  flex-direction: column;
  padding-top: 15px;
  /*padding-bottom: 15px;*/
}

.activity-info {
  padding-left: 15px;
  padding-right: 15px;
}

.text-icon-item {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.text-icon-item-text {
  -webkit-flex: 1;
  flex: 1;
}
.text-icon-item-title {
  font-size: 17px;
  font-weight: bold;
}
.weui-media-box__info {
  margin-top: 5px;
}
.text-icon-item-img {
  width: 64rpx;
  height: 64rpx;
  background-color: inherit;
  margin-left: 10px;
}

.activity-name {
  font-weight: 400;
  font-size: 17px;
  margin-bottom: 10px;
}

.activity-desc {
  font-size: 13px;
  line-height: 1.2;
  margin-bottom: 10px;
}

.activity-date {
  margin-top: 10px;
  font-size: 14px;
  line-height: 1em;
}

.activity-map {
  width: 100%;
  /*margin-top: 5px;*/
}

.activity-trees {
  margin-bottom: 10px;
  padding-left: 15px;
  padding-right: 15px;
  font-size: 14px;
  line-height: 1.2em;
}
.activity-tree-img {
  border-radius: 50%;
}
.img-mask {
  background-color: #0BB20C;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity:0.1;
  filter:alpha(opacity=10);
}
.img-mask-icon {
  position: absolute;
  bottom: 0px;
  left: 62rpx;
}
.weui-cell-tweet {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.activity-info-meta {
  padding-right: 1em;
}

.activity-info-meta-extra {
  padding-left: 1em;
  border-left: 1px solid #CECECE;
}

.strong-font {
  font-weight: bold;
}

.weui-panel {
  margin-top: 30px;
}
