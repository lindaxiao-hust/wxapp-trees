.comment-container {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  padding: 30rpx 20rpx 20rpx;
  position: relative;
}
.comment-container:first-child::before {
  display: none;
}
.comment-container::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #E5E5E5;
  color: #E5E5E5;
  left: 110rpx;
}
.comment-container-active {
  background-color: #fff;
}

.comment-head {
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-info {
  display: inline-block;
  -webkit-flex: 1;
  flex: 1;
}
.comment-username {
  font-size: 13px;

}
.comment-date {
  font-size: 12px;
  color: #999999;
}

.comment-body {
  margin-left: 95rpx;
  margin-top: 15rpx;
}

.comment-content {
  display: block;
  font-size: 14px;
  word-wrap: break-word;
}

image {
  height: 256rpx;
}
.comment-img {
  width: 40%;
  margin-top: 15rpx;
}
